[Unit]
Description=fix-my-claw OpenClaw watchdog
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Restart=always
RestartSec=5

# Run as the same user that runs OpenClaw (recommended).
# User=openclaw

Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/env fix-my-claw monitor --config /etc/fix-my-claw/config.toml

[Install]
WantedBy=multi-user.target

